<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.inireksa.tikreguler">

    <!-- Include required permissions for Google Mobile Ads to run. -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Login"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:name=".JadwalActivity"
            android:label="Jadwal Matkul" />
        <activity
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:name=".DosenActivity"
            android:label="Dosen" />
        <activity
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:name=".mhsActivity"
            android:label="Mahasiswa TIK" />
        <activity
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:name=".Firebase.InfoActivity"
            android:label="Info Terbaru" />
        <activity
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:name=".Tampildata.TampilDataActivity"
            android:label="Info Terbaru"/>
        <!-- This meta-data tag is required to use Google Play Services. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- Include the AdActivity configChanges and theme. -->
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
    </application>

</manifest>